<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SelectUserLogin.SelectLoginProcess">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/last_logo"/>

    <TextView
        android:id="@+id/selectLoginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Want to continue with"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_slab"
        />

    <RelativeLayout
        android:id="@+id/adminLogin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        android:padding="10dp">

        <ImageView
            android:id="@+id/admin_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/admin" />

        <TextView
            android:id="@+id/adminText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/admin_btn"
            android:layout_alignEnd="@id/admin_btn"
            android:layout_alignBottom="@id/admin_btn"
            android:layout_toEndOf="@+id/admin_img"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/admin_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="adminLoginBtn"
            android:background="@drawable/btn_transparent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/studentLogin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        android:padding="10dp">

        <ImageView
            android:id="@+id/student_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/student" />

        <TextView
            android:id="@+id/studentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/student_Btn"
            android:layout_alignEnd="@id/student_Btn"
            android:layout_alignBottom="@id/student_Btn"
            android:layout_toEndOf="@+id/student_img"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:text="Student"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/student_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="studentLoginBtn"
            android:background="@drawable/btn_transparent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/facultyLogin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        android:padding="10dp">

        <ImageView
            android:id="@+id/faculty_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/faculty" />

        <TextView
            android:id="@+id/facultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/faculty_Btn"
            android:layout_alignEnd="@id/faculty_Btn"
            android:layout_alignBottom="@id/faculty_Btn"
            android:layout_toEndOf="@+id/faculty_img"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:text="Faculty"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/faculty_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="facultyLoginBtn"
            android:background="@drawable/btn_transparent" />

    </RelativeLayout>


</LinearLayout>